pipeline {
    agent any
    environment {
        PATH = "env/bin:$PATH"
    }
    stages {
        stage('Setup') {
            steps {
                echo 'Check Python and Pip versions:'
                sh 'python3 --version'
                sh 'pip --version'
                echo 'Establish virtual environment'
                sh 'apt install -y python3-venv'
                sh 'python3 -m venv env'
                echo 'Activate virtual environment'
                script {
                    sh '. env/bin/activate'
                    sh 'pip install -r requirements.txt'
                }
            }
        }
        stage('Tests: Robot Framework') {
            when {
                expression { env.CHANGE_ID != null }
            }
            steps {
                sh 'robot testing.robot'
            }
        }
        stage('Merge to main') {
            echo 'Merging PR to main'
        }
    }
}
