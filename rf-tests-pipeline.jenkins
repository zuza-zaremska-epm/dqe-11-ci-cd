pipeline {
   agent any

   stages {
      stage('Install requirements') {
        steps {
          sh 'apt install -y python3.11-venv'
          sh 'python3.11 -m venv env'
          sh '. env/bin/activate'
          echo 'Virtual env: $VIRTUAL_ENV'
          sh 'pip install -r requirements.txt'
          echo 'Requirements installed.'
        }
      }
      stage('List') {
        steps {
          echo "List contents of the GitHub repository root."
          sh 'ls'
        }
      }
       stage('Test') {
         steps {
            echo 'Testing...'
         }
       }
       stage('Deploy') {
         steps {
           echo 'Deploying...'
         }
       }
   }
}
