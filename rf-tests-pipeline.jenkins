pipeline {
   agent any

   stages {
      stage('Install requirements') {
        steps {
          sh 'apt install python3.11-venv'
          sh 'Y'
          sh 'python3 -m venv v_env'
          sh 'source v_env/bin/activate'
          sh 'pip install -r requirements.txt'
          echo 'Requirements installed.'
        }
      }
      stage('List') {
        steps {
          echo "List contents of the GitHub repository root."
          sh 'ls'
        }
      }
       stage('Test') {
         steps {
            echo 'Testing...'
         }
       }
       stage('Deploy') {
         steps {
           echo 'Deploying...'
         }
       }
   }
}
