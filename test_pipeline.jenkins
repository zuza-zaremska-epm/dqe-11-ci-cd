pipeline {
    agent any
    stages {
        stage('Version') {
            steps {
                sh 'python3 --version'
                sh 'pip --version'
                sh 'apt install -y python3-venv'
                sh 'python3 -m venv env'
                sh '. env/bin/activate && pip install -r requirements.txt'
                sh 'pytest --version'
            }
        }
        stage('Tests') {
            steps {
                sh 'pytest test_hometask_4_2.py'
            }
        }
    }
}
